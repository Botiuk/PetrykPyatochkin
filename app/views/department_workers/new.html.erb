<h4>
    <% if @worker.present? %>
        <%= t('.title_worker') %> <%= @worker.last_name %> <%= @worker.first_name %> <%= @worker.middle_name %>
        <%= link_to t('button.show_worker'), worker_path(@worker), class: "btn btn-info" %>
    <% elsif @department.present? %>
        <%= t('.title') %> "<%= @department.name %>"
    <% else %>
        <%= t('.title') %>
    <% end %>
</h4>

<%= render "form", department_worker: @department_worker %>