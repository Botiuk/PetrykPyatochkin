<h4><%= t('.title') %></h4>

<div class="row">
    <div class="col-12">
        <b><%= t('.name') %></b> <%= @position.name %> <br>
        <b><%= t('.salary') %></b> <%= @position.salary %> <br>
        <b><%= t('.vacation_days') %></b> <%= @position.vacation_days %>
    </div>
    <div class="col mt-2">
        <%= link_to t('button.all.position'), positions_path, class: "btn btn-primary" %>
        <%= link_to t('button.edit'), edit_position_path(@position), class: "btn btn-warning" %>
    </div>
</div>