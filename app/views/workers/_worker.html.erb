<tr id="<%= dom_id worker %>" class="text-center">
    <td style="width: 9%;"><%= worker.roll_number %></td>
    <td style="width: 25%;"><%= worker.last_name %></td>
    <td style="width: 25%;"><%= worker.first_name %></td>
    <td style="width: 25%;"><%= worker.middle_name %></td>
    <td style="width: 8%;">
        <%= link_to t('button.show'), worker_path(worker), class: "btn btn-info btn-sm" %>
    </td>
    <td style="width: 8%;">
        <% unless worker.date_of_fired.present? %>
            <%= link_to t('button.edit'), edit_worker_path(worker), class: "btn btn-warning btn-sm" %>
        <% else %>
            <div class="btn btn-danger btn-sm"><%= t('.fired') %></div>
        <% end %>
    </td>
</tr>