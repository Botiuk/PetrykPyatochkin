<div class="row mb-2">
    <div class="col"><h4><%= t('.title') %></h4></div>
    <div class="col text-end">
        <%= link_to t('button.add.department'), new_department_path, :method => :post, class: "btn btn-secondary" %>
    </div>
</div>

<% if @departments.present? %>
<div class="table-responsive">
    <table class="table align-middle table-secondary table-striped">
        <tr class="text-center">
            <th style="width: 8%;"><%= t('.abbreviation') %></th>
            <th style="width: 30%;"><%= t('.name') %></th>
            <th style="width: 30%;"><%= t('.manager') %></th>
            <th style="width: 8%;"><%= t('.count') %></th>
            <th style="width: 8%;"></th>
            <th style="width: 8%;"></th>
            <th style="width: 8%;"></th>
        </tr>
        <% @departments.each do |department| %>
            <%= render department %>
        <% end %>
    </table>
</div>
<% else %>
    <p class="fw-semibold text-danger text-center"><%= t('.departments_empty') %></p>
<% end %>

<% if @pagy.pages > 1 %>
    <div class="d-flex justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) %>
    </div>
    <div class="d-flex justify-content-center">
        <%== pagy_info(@pagy) %>
    </div>
<% end %>