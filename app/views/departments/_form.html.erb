<%= form_with(model: department) do |form| %>
    <%= render 'shared/form_errors_messages', object: form.object %>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-2">
                <%= form.label :abbreviation, t('.abbreviation'), style: "display: block" %>
                <%= form.text_field :abbreviation, autofocus: true, class: "form-control" %>
            </div>

            <div class="col-12">
                <%= form.label :name, t('.name'), style: "display: block" %>
                <%= form.text_field :name, class: "form-control" %>
            </div>
        </div>

        <div class="row mt-2">
            <div>
                <%= form.button nil, class: "btn btn-success" do %>
                    <%= t('button.submit') %>
                <% end %>
            </div>
        </div>
    </div>

<% end %>